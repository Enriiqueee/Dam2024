<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".features.superhero.presentation.SuperHeroesActivity">

    <LinearLayout
        android:id="@+id/hero_1"
        android:layout_margin="16dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:gravity="center"
        android:elevation="4dp">

    <TextView
        android:id="@+id/superhero_id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/superhero_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
         />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hero_2"
        android:layout_margin="16dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:gravity="center"
        android:elevation="4dp">

        <TextView
            android:id="@+id/superhero_id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/superhero_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hero_3"
        android:layout_margin="16dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:gravity="center"
        android:elevation="4dp">

        <TextView
            android:id="@+id/superhero_id_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/superhero_name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            />
    </LinearLayout>
</LinearLayout>
